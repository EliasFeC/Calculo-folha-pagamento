package models;
public class Funcionario {
    private int matricula;
    private String nome;
    private String sexo;
    private int idade;
    private double salario;

    public Funcionario(int matricula, String nome, String sexo, int idade, double salario) {
        this.matricula = matricula;
        this.nome = nome;
        this.sexo = sexo;
        this.idade = idade;
        this.salario = salario;
    }

    public int getMatricula() {
        return matricula;
    }

    public String getNome() {
        return nome;
    }

    public String getSexo() {
        return sexo;
    }

    public int getIdade() {
        return idade;
    }

    public double getSalario() {
        return salario;
    }

    public double calcularSalarioPorHora() {
        int horasPorSemana = 40;
        return salario / horasPorSemana;
    }

    public double calcularPericulosidade() {
        // Vamos assumir que a periculosidade é equivalente a 30% do salário
        double percentualPericulosidade = 0.3;
        return salario * percentualPericulosidade;
    }

    public double calcularInsalubridade() {
        double insalubridade = 0.0;
        double insalubridadeBaixa = 0.1;
        double insalubridadeMedia = 0.2;
        double insalubridadeAlta = 0.4;

        if (insalubridade == insalubridadeBaixa) {
            return salario * insalubridadeBaixa;
        } else if (insalubridade == insalubridadeMedia) {
            return salario * insalubridadeMedia;
        } else if (insalubridade == insalubridadeAlta) {
            return salario * insalubridadeAlta;
        } else {
            return salario;
        }


    }

}
